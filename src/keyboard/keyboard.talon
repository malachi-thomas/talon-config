# # ===== Keyboard Shortcuts =====

# # Deleting
delete word: key(alt-backspace)
remove space:
  key(alt-left)
  key(backspace)
  key(alt-right)

# ===== Globbal =====
find this: key(cmd-f)
undo that: key(cmd-z)
redo that: key(cmd-shift-z)
tab next: key(ctrl-tab)
tab last: key(ctrl-shift-tab)
save this: key(cmd-s)
copy this: key(cmd-c)
paste that: key(cmd-v)
force quit: key(alt-cmd-escape)
system sleep:
  key(cmd-space)
  sleep(50ms)
  "sleep\n"
